{
  "name": "billable",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hammerframework/eslint-config-hammer": "^0.0.1-alpha.9.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "core-js": "^3.2.1",
    "lerna": "^3.16.4",
    "netlify-cli": "^2.12.0",
    "nodemon": "^1.19.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "eslintConfig": {
    "extends": "@hammerframework/eslint-config-hammer"
  },
  "scripts": {
    "dev": "yarn build:hammer && (yarn dev:api & yarn dev:web)",
    "open": "open http://localhost:8910",
    "dev:api": "yarn workspace api dev",
    "dev:web": "yarn workspace web dev",
    "db:up": "yarn workspace api db:up",
    "db:save": "yarn workspace api db:save",
    "build:hammer": "yarn lerna run build",
    "build:hammer:watch": "yarn lerna run --parallel build:watch",
    "lint": "yarn eslint 'web/src/**/*.js' 'api/src/**/*.js' 'packages/**/src/**/*.js'",
    "lint:fix": "yarn eslint --fix 'web/src/**/*.js' 'api/src/**/*.js' 'packages/**/src/**/*.js'",
    "clean": "yarn workspace api clean && yarn workspace web clean",
    "build": "yarn build:hammer && yarn workspace api build && yarn workspace api package && yarn workspace web build"
  }
}
