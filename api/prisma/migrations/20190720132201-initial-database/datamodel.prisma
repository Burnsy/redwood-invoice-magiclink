datasource sqlite {
  url      = "file:dev.db"
  provider = "sqlite"
}

generator photonjs {
  provider = "photonjs"
}

model User {
  id                Int               @id
  tokens            UserToken[]
  invoices          Invoice[]
}

model UserToken {
  id                Int               @id
  user              User
  sub               String            @unique
}

model Invoice {
  id                Int               @id
  User              User
  body              String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}