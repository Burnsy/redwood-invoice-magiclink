datasource sqlite {
  url      = "file:dev.db"
  provider = "sqlite"
}

generator photonjs {
  provider = "photonjs"
  output = "../generated/photon"
}

model User {
  id                Int               @id
  accessTokens      AccessToken[]
  invoices          Invoice[]
}

model AccessToken {
  id                Int               @id
  user              User?             
  sub               String            @unique
}

model Invoice {
  id                String            @default(cuid()) @id
  User              User              
  body              String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}