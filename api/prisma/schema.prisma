datasource sqlite {
  url      = "file:./dev.sqlite"
  provider = "sqlite"
}

// Windows users should remove binaryTargets for local dev
generator client {
  provider = "prisma-client-js"
}

model Invoice {
  id            Int      @id @default(autoincrement())
  invoiceNumber String
  date          String
  body          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}