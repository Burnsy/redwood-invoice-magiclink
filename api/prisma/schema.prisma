datasource hammerDatasource {
  url = env("PRISMA_URL")
  provider = env("PRISMA_PROVIDER")
}

generator photonjs {
  provider = "photonjs"
  output = "../generated/photon"
  platforms = ["native", "linux-glibc-libssl1.0.2"]
}

model User {
  id Int @id
  email String @unique
  invoices Invoice[]
}

model Invoice {
  id Int @id
  User User
  body String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}