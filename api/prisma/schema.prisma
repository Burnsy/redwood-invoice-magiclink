datasource hammerDatasource {
  provider = env("PRISMA_PROVIDER")
  url = env("PRISMA_URL")
}

generator photonjs {
  provider = "photonjs"
  output = "../../packages/photon"
  platforms = ["native", "linux-glibc-libssl1.0.2"]
}

model User {
  id                Int               @id
  accessTokens      AccessToken[]
  invoices          Invoice[]
}

model AccessToken {
  id                Int               @id
  user              User?             
  sub               String            @unique
}

model Invoice {
  id                String            @default(cuid()) @id
  User              User              
  body              String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}